<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Link List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <link-list
                jcr:primaryType="nt:unstructured"
                jcr:title="Link List"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <link-list
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Edit Link List"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter title text here"
                                                fieldLabel="Title"
                                                name="./title"/>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter description text here"
                                                fieldLabel="Description"
                                                name="./description"/>
                                            <link-list-style
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Choose a style for link list"
                                                fieldLabel="Link List Style"
                                                name="./linkListStyle">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None"
                                                        value="panel-kyo-white"/>
                                                    <shaded
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Shaded"
                                                        value="panel-kyo"/>
                                                    <highlight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Highlight"
                                                        value="panel-info-center"/>
                                                </items>
                                            </link-list-style>
                                        </items>
                                    </column>
                                </items>
                            </link-list>
                        </items>
                    </column>
                </items>
            </link-list>
            <list-items
                jcr:primaryType="nt:unstructured"
                jcr:title="List Items"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <list-items
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Edit List Items"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <list-items
                                                granite:class="full-width"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldDescription="Click 'Add field' to add a new item to link list"
                                                fieldLabel="List Items">
<field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    acs-commons-nested=""
                                                    name="./list-items">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <item-label
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Enter a label for the link"
                                                                    fieldLabel="Link Label"
                                                                    name="./itemLabel"/>
                                                                <item-tool-tip
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldDescription="Enter a tool tip for the link"
                                                                    fieldLabel="Link Tool Tip"
                                                                    name="./itemToolTip"/>
                                                                <item-url
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    fieldDescription="Enter link url"
                                                                    fieldLabel="Link URL"
                                                                    name="./itemUrl"
                                                                    rootPath="/content"/>
                                                                <item-icon
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                                    fieldDescription="Choose a link icon"
                                                                    fieldLabel="Link Icon"
                                                                    name="./itemIcon">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <none
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Select"
                                                                            value=""/>
                                                                        <internal
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Internal"
                                                                            value="fa-arrow-circle-right"/>
                                                                        <external
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="External"
                                                                            value="fa-external-link-square"/>
                                                                        <download
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Downloads"
                                                                            value="fa-cloud-download"/>
                                                                    </items>
                                                                </item-icon>
                                                                <item-target
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                                    fieldDescription="Choose a target window for the link"
                                                                    name="./itemTarget"
                                                                    text="Open in New Window"
                                                                    uncheckedValue="_same"
                                                                    value="_blank"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </list-items>
                                        </items>
                                    </column>
                                </items>
                            </list-items>
                        </items>
                    </column>
                </items>
            </list-items>
        </items>
    </content>
</jcr:root>
